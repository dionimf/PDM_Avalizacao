<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackground"
    android:orientation="vertical"

    android:weightSum="1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_weight="0.17"
        android:editable="true"
        android:maxLines="2"

        android:textColor="#000"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#696969"
            android:clickable="true"
            android:contextClickable="true"
            android:enabled="true"


            android:text="CLS"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_dividir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_toEndOf="@+id/bt_clear"
            android:layout_toRightOf="@+id/bt_clear"
            android:layout_weight="1"
            android:background="#696969"
            android:clickable="true"
            android:contextClickable="true"
            android:enabled="true"
            android:text="/"
            android:textColor="#fff"
            android:textSize="25dp" />


        <Button
            android:id="@+id/bt_multiplicar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_toEndOf="@+id/bt_dividir"
            android:layout_toRightOf="@+id/bt_dividir"
            android:layout_weight="1"
            android:background="#696969"
            android:clickable="true"
            android:contextClickable="true"
            android:enabled="true"
            android:text="*"
            android:textColor="#fff"
            android:textSize="25dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_num7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#696969"
            android:clickable="true"
            android:contextClickable="true"
            android:enabled="true"
            android:text="7"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_num8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#696969"
            android:clickable="true"
            android:contextClickable="true"
            android:enabled="true"
            android:text="8"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_num9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#696969"
            android:clickable="true"
            android:contextClickable="true"
            android:enabled="true"
            android:text="9"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_subtrair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_toEndOf="@+id/bt_multiplicar"
            android:layout_toRightOf="@+id/bt_multiplicar"
            android:layout_weight="1"
            android:background="#696969"
            android:clickable="true"
            android:contextClickable="true"
            android:enabled="true"
            android:text="-"
            android:textColor="#fff"
            android:textSize="25dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_num4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#696969"
            android:clickable="true"
            android:contextClickable="true"
            android:enabled="true"
            android:text="4"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_num5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#696969"
            android:clickable="true"
            android:contextClickable="true"
            android:enabled="true"
            android:text="5"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_num6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#696969"
            android:clickable="true"
            android:contextClickable="true"
            android:enabled="true"
            android:text="6"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_somar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#696969"
            android:clickable="true"
            android:contextClickable="true"
            android:enabled="true"
            android:text="+"
            android:textColor="#fff"
            android:textSize="25dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_num1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#696969"
            android:clickable="true"
            android:contextClickable="true"
            android:enabled="true"
            android:text="1"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_num2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#696969"
            android:clickable="true"
            android:contextClickable="true"
            android:enabled="true"
            android:text="2"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_num3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#696969"
            android:clickable="true"
            android:contextClickable="true"
            android:enabled="true"
            android:text="3"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_simbolovirgula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#696969"
            android:clickable="true"
            android:contextClickable="true"
            android:enabled="true"
            android:text=","
            android:textColor="#fff"
            android:textSize="25dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_nun0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#696969"
            android:clickable="true"
            android:contextClickable="true"
            android:enabled="true"
            android:text="0"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_resultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#696969"
            android:clickable="true"
            android:contextClickable="true"
            android:enabled="true"
            android:text="="
            android:textColor="#fff"
            android:textSize="25dp" />


    </LinearLayout>


</LinearLayout>
